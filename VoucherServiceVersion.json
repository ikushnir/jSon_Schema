{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "build",
    "release"
  ],
  "properties": {
    "build": {
      "$id": "#/properties/build",
      "type": "object",
      "title": "The Build Schema",
      "required": [
        "number",
        "sourceBranch",
        "sourceVersion"
      ],
      "properties": {
        "number": {
          "$id": "#/properties/build/properties/number",
          "type": "string",
          "title": "The Number Schema",
          "default": "",
          "examples": [
            "PartnersAPI.20181127.1"
          ],
          "pattern": "^(.*)$"
        },
        "sourceBranch": {
          "$id": "#/properties/build/properties/sourceBranch",
          "type": "string",
          "title": "The Sourcebranch Schema",
          "default": "",
          "examples": [
            "refs/heads/master"
          ],
          "pattern": "^(.*)$"
        },
        "sourceVersion": {
          "$id": "#/properties/build/properties/sourceVersion",
          "type": "string",
          "title": "The Sourceversion Schema",
          "default": "",
          "examples": [
            "a9a6f51a3ed984e026faa785bdc3ab1eba2e4b76"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "release": {
      "$id": "#/properties/release",
      "type": "object",
      "title": "The Release Schema",
      "required": [
        "environmentName",
        "name",
        "requestedBy"
      ],
      "properties": {
        "environmentName": {
          "$id": "#/properties/release/properties/environmentName",
          "type": "string",
          "title": "The Environmentname Schema",
          "default": "",
          "examples": [
            "Test"
          ],
          "pattern": "^(.*)$"
        },
        "name": {
          "$id": "#/properties/release/properties/name",
          "type": "string",
          "title": "The Name Schema",
          "default": "",
          "examples": [
            "PartnersAPI-Release-322"
          ],
          "pattern": "^(.*)$"
        },
        "requestedBy": {
          "$id": "#/properties/release/properties/requestedBy",
          "type": "object",
          "title": "The Requestedby Schema",
          "required": [
            "name",
            "email"
          ],
          "properties": {
            "name": {
              "$id": "#/properties/release/properties/requestedBy/properties/name",
              "type": "string",
              "title": "The Name Schema",
              "default": "",
              "examples": [
                "Misyats, Ivan"
              ],
              "pattern": "^(.*)$"
            },
            "email": {
              "$id": "#/properties/release/properties/requestedBy/properties/email",
              "type": "string",
              "title": "The Email Schema",
              "default": "",
              "examples": [
                "imi@interlogic.com.ua"
              ],
              "pattern": "^(.*)$"
            }
          }
        }
      }
    }
  }
}
